    <decisions>
        <description>Unit and Volume are mandatory if product status is &apos;Preferred&apos; or &apos;Selected&apos;</description>
        <name>ProdStatusPreferredOrSelected</name>
        <label>ProdStatusPreferredOrSelected</label>
        <locationX>396</locationX>
        <locationY>1214</locationY>
        <defaultConnector>
            <targetReference>CreateShortlistedProduct3</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>ProdStatusPreferredOrSelectedDecision</name>
            <conditionLogic>(1 OR 2) AND ( 3 OR 4 )</conditionLogic>
            <conditions>
                <leftValueReference>ProductStatusRCS</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Preferred</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>ProductStatusRCS</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Selected</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Unit_Price3</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>Volume</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Error_Message</targetReference>
            </connector>
            <label>ProdStatusPreferredOrSelectedDecision</label>
        </rules>
    </decisions>
